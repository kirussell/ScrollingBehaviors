<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/standard_margin">

    <Button
        android:id="@+id/nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/recycler_in_nestedscrollview"
        android:onClick="onRecyclerInNestedScrollView"/>

    <Button
        android:id="@+id/recycler_in_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/recycler_in_recycler"
        android:onClick="onRecyclerInRecycler"/>
</LinearLayout>